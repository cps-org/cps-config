{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "BUILD_TESTING": true
      },
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      }
    },
    {
      "name": "fetch-deps",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "subprojects/provider.cmake"
      }
    },
    {
      "name": "shared",
      "inherits": "fetch-deps",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": true,
        "CMAKE_POSITION_INDEPENDENT_CODE": true
      }
    }
  ]
}

# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[meson.build]
indent_size = 2

[{CMakeLists.txt,*.cmake}]
indent_size = 2

[*.{toml,yml,json}]
indent_size = 2
